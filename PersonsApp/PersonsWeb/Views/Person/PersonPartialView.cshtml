@model Persons.Core.Models.Person

<div class="container p-3">
    <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#addPerson">
        Add
    </button>
</div>

<div class="modal fade" id="addPerson" aria-labelledby="addPersonLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPersonLabel">Add Person</h5>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Person", FormMethod.Post))
                {
                    <table>
                        <tr>
                            <td align="right">First Name: </td>
                            <td>@Html.TextBoxFor(m => m.FirstName)</td>
                        </tr>
                        <tr>
                            <td align="right">Last Name: </td>
                            <td>@Html.TextBoxFor(m => m.LastName)</td>
                        </tr>
                        <tr>
                            <td align="right">Birth Date: </td>
                            <td>@Html.TextBoxFor(m => m.BirthDate, new { @type = "date", @Value = Model.BirthDate.ToString("yyyy-MM-dd") })</td>
                        </tr>
                        <tr>
                            <td align="right">Phone Number(s): </td>
                            <td>@Html.TextBoxFor(m => m.PhoneNumber)</td>
                        </tr>
                        <tr>
                            <td align="right">Address: </td>
                            <td>@Html.TextBoxFor(m => m.Address)</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td align="right">
                                <input type="submit" name="btn" value="Cancel"/>
                                <input type="submit" name="btn" value="Save"/>
                            </td>
                        </tr>
                    </table>          
                }
            </div>
        </div>
    </div>
</div>